												<thead>
													<tr>
														<th>Mã đá</th>
														<th>Tên đá</th>
														<th>Chủng loại</th>
														<th>Xuất xứ</th>
														<th>Đơn vị tính</th>
														<th>Diện tích</th>
														<th>Trạng thái</th>
