<script>
	document.addEventListener("DOMContentLoaded", function () {
		var selectTab2 = '@chon';

		if (selectTab2.toLowerCase() === 'true') {
			document.querySelector('a[href="#bottom-justified-tab2"]').click();
		}
	});
</script>