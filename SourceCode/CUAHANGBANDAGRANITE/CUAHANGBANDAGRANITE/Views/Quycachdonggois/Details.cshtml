														<a asp-action="Edit" asp-route-id="@Model.Idquycach"
															   style="max-width: 70px;" class="btn btn-success btn-block mt-0 search_button">Sửa</a>
													</div>
												</div>
											</form>
										</div>

									</div>
								</div>
							</fieldset>
						</div>
						<style>
